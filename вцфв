-- Every Second You Get +1 Damage Cheat
-- WEROXTEAM Mobile Edition
-- GitHub: https://github.com/WeroxTeam/ESYGD-Cheat

if not game:IsLoaded() then
    game.Loaded:Wait()
end

-- –ü—Ä–æ–≤–µ—Ä—è–µ–º —á—Ç–æ –º—ã –≤ –Ω—É–∂–Ω–æ–π –∏–≥—Ä–µ
local targetGameId =  -- –í–°–¢–ê–í–¨ –°–Æ–î–ê ID –ò–ì–†–´
if game.PlaceId ~= targetGameId then
    warn("‚ùå This script is for Every Second You Get +1 Damage only!")
    return
end

local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer
local RunService = game:GetService("RunService")

-- –ö–æ–Ω—Ñ–∏–≥—É—Ä–∞—Ü–∏—è
local Config = {
    AutoFarm = false,
    GuardianFarm = false, 
    AutoClicker = false
}

-- –°–æ–∑–¥–∞–µ–º –º–æ–±–∏–ª—å–Ω—ã–π GUI
local function CreateMobileGUI()
    local ScreenGui = Instance.new("ScreenGui")
    ScreenGui.Name = "WeroxTeamCheat"
    ScreenGui.ResetOnSpawn = false
    
    local MainFrame = Instance.new("Frame")
    MainFrame.Size = UDim2.new(0, 300, 0, 400)
    MainFrame.Position = UDim2.new(0.5, -150, 0.5, -200)
    MainFrame.BackgroundColor3 = Color3.fromRGB(20, 20, 20)
    MainFrame.BorderColor3 = Color3.fromRGB(255, 0, 0)
    MainFrame.BorderSizePixel = 2
    MainFrame.Active = true
    MainFrame.Draggable = true
    MainFrame.Parent = ScreenGui
    
    -- –•–µ–¥–µ—Ä
    local Header = Instance.new("Frame")
    Header.Size = UDim2.new(1, 0, 0, 40)
    Header.BackgroundColor3 = Color3.fromRGB(255, 0, 0)
    Header.Parent = MainFrame
    
    local Title = Instance.new("TextLabel")
    Title.Size = UDim2.new(1, 0, 1, 0)
    Title.BackgroundTransparency = 1
    Title.Text = "WEROXTEAM CHEAT"
    Title.TextColor3 = Color3.fromRGB(255, 255, 255)
    Title.Font = Enum.Font.GothamBold
    Title.TextSize = 16
    Title.Parent = Header
    
    -- –ö–Ω–æ–ø–∫–∏
    local ButtonsFrame = Instance.new("Frame")
    ButtonsFrame.Size = UDim2.new(1, -20, 0, 300)
    ButtonsFrame.Position = UDim2.new(0, 10, 0, 50)
    ButtonsFrame.BackgroundTransparency = 1
    ButtonsFrame.Parent = MainFrame
    
    local function CreateButton(text, yPosition)
        local button = Instance.new("TextButton")
        button.Size = UDim2.new(1, 0, 0, 50)
        button.Position = UDim2.new(0, 0, 0, yPosition)
        button.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
        button.TextColor3 = Color3.fromRGB(255, 255, 255)
        button.Text = text
        button.Font = Enum.Font.Gotham
        button.TextSize = 14
        return button
    end
    
    local AutoFarmBtn = CreateButton("‚ö° AUTO FARM: OFF", 0)
    local GuardianBtn = CreateButton("üëπ GUARDIAN FARM: OFF", 60)
    local MultiplierBtn = CreateButton("üí• 10X DAMAGE", 120)
    local AutoClickBtn = CreateButton("üñ±Ô∏è AUTO CLICKER: OFF", 180)
    
    AutoFarmBtn.Parent = ButtonsFrame
    GuardianBtn.Parent = ButtonsFrame
    MultiplierBtn.Parent = ButtonsFrame
    AutoClickBtn.Parent = ButtonsFrame
    
    -- –°—Ç–∞—Ç—É—Å
    local StatusLabel = Instance.new("TextLabel")
    StatusLabel.Size = UDim2.new(1, -20, 0, 30)
    StatusLabel.Position = UDim2.new(0, 10, 1, -40)
    StatusLabel.BackgroundTransparency = 1
    StatusLabel.Text = "Ready to use..."
    StatusLabel.TextColor3 = Color3.fromRGB(0, 255, 0)
    StatusLabel.Font = Enum.Font.Gotham
    StatusLabel.TextSize = 12
    StatusLabel.Parent = MainFrame
    
    -- –§—É–Ω–∫—Ü–∏–æ–Ω–∞–ª—å–Ω–æ—Å—Ç—å –∫–Ω–æ–ø–æ–∫
    AutoFarmBtn.MouseButton1Click:Connect(function()
        Config.AutoFarm = not Config.AutoFarm
        AutoFarmBtn.Text = Config.AutoFarm and "‚ö° AUTO FARM: ON" or "‚ö° AUTO FARM: OFF"
        AutoFarmBtn.BackgroundColor3 = Config.AutoFarm and Color3.fromRGB(0, 150, 0) or Color3.fromRGB(40, 40, 40)
        StatusLabel.Text = Config.AutoFarm and "Auto Farm: ACTIVATED" or "Auto Farm: STOPPED"
    end)
    
    GuardianBtn.MouseButton1Click:Connect(function()
        Config.GuardianFarm = not Config.GuardianFarm
        GuardianBtn.Text = Config.GuardianFarm and "üëπ GUARDIAN FARM: ON" or "üëπ GUARDIAN FARM: OFF"
        GuardianBtn.BackgroundColor3 = Config.GuardianFarm and Color3.fromRGB(150, 0, 0) or Color3.fromRGB(40, 40, 40)
        StatusLabel.Text = Config.GuardianFarm and "Guardian Farm: ACTIVATED" or "Guardian Farm: STOPPED"
    end)
    
    MultiplierBtn.MouseButton1Click:Connect(function()
        -- –£–º–Ω–æ–∂–µ–Ω–∏–µ —É—Ä–æ–Ω–∞
        local damage = LocalPlayer:FindFirstChild("Damage")
        if damage then
            damage.Value = damage.Value * 10
            StatusLabel.Text = "Damage 10X Multiplied!"
        end
    end)
    
    AutoClickBtn.MouseButton1Click:Connect(function()
        Config.AutoClicker = not Config.AutoClicker
        AutoClickBtn.Text = Config.AutoClicker and "üñ±Ô∏è AUTO CLICKER: ON" or "üñ±Ô∏è AUTO CLICKER: OFF"
        AutoClickBtn.BackgroundColor3 = Config.AutoClicker and Color3.fromRGB(0, 0, 150) or Color3.fromRGB(40, 40, 40)
        StatusLabel.Text = Config.AutoClicker and "Auto Clicker: ACTIVATED" or "Auto Clicker: STOPPED"
    end)
    
    ScreenGui.Parent = game.CoreGui
    return ScreenGui
end

-- –°–∏—Å—Ç–µ–º–∞ –∞–≤—Ç–æ-—Ñ–∞—Ä–º–∞
coroutine.wrap(function()
    while true do
        if Config.AutoFarm then
            local damage = LocalPlayer:FindFirstChild("Damage")
            if not damage then
                damage = Instance.new("IntValue")
                damage.Name = "Damage"
                damage.Value = 0
                damage.Parent = LocalPlayer
            end
            damage.Value = damage.Value + 1
        end
        wait(1)
    end
end)()

-- –°–∏—Å—Ç–µ–º–∞ —Ñ–∞—Ä–º–∞ Guardian
coroutine.wrap(function()
    while true do
        if Config.GuardianFarm then
            -- –ü–æ–∏—Å–∫ –∏ –∞—Ç–∞–∫–∞ Guardian
            local guardian = workspace:FindFirstChild("MisFortune's Guardian") or workspace:FindFirstChild("MisFortunes Guardian")
            if guardian and LocalPlayer.Character then
                local hrp = LocalPlayer.Character:FindFirstChild("HumanoidRootPart")
                if hrp then
                    hrp.CFrame = guardian.HumanoidRootPart.CFrame + Vector3.new(0, 5, 0)
                    -- –ê—Ç–∞–∫–∞
                    game:GetService("ReplicatedStorage"):FindFirstChild("DamageEvent"):FireServer(guardian, 5000)
                end
            end
        end
        wait(0.5)
    end
end)()

-- –ê–≤—Ç–æ-–∫–ª–∏–∫–µ—Ä
coroutine.wrap(function()
    while true do
        if Config.AutoClicker then
            local damage = LocalPlayer:FindFirstChild("Damage")
            if damage then
                damage.Value = damage.Value + 0.5
            end
        end
        wait(0.1)
    end
end)()

-- –ê–Ω—Ç–∏-–ê–§–ö
coroutine.wrap(function()
    while true do
        wait(30)
        game:GetService("VirtualUser"):CaptureController()
        game:GetService("VirtualUser"):ClickButton2(Vector2.new())
    end
end)()

-- –°–æ–∑–¥–∞–µ–º GUI
CreateMobileGUI()

print("üéÆ WEROXTEAM Cheat Loaded!")
print("üì± Mobile GUI Created")
print("üëπ Guardian Farm Ready")
